---
import HoverAnimatedLink from '@/components/HoverAnimatedLink'
import PostCardList from '@/components/PostsCardView'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'

const recentPosts = (await getPosts()).slice(0, 3)
---

<BaseLayout title='主页'>
	<TitlePage title='Hi! ChlorineC here.' />
	<p class='flex items-center justify-between'>
		<span class='text-lg font-bold'>最近更新:</span>
		<HoverAnimatedLink
			class='ml-4 text-gray-500'
			href='/category/development'
			ariaLabel='view more posts'
		>
			查看更多
		</HoverAnimatedLink>
	</p>
	<PostCardList posts={recentPosts} />
</BaseLayout>
