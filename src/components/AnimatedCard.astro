---
import { cn } from '@/utils'

type Props = {
	class?: string
	[key: string]: any
}

const { class: className, ...props } = Astro.props
---

<article
	class={cn(
		'shadow-md rounded-lg dark:shadow-none dark:border dark:border-gray-500 hover:shadow-lg hover:-translate-y-1 transition-transform duration-150 ease-in-out',
		className
	)}
	{...props}
>
	<slot />
</article>
