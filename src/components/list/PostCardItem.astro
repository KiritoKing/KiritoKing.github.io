---
import type { CollectionEntry } from 'astro:content'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

type Props = {
	data: CollectionEntry<'blog'>['data']
	readTime: string
	slug: CollectionEntry<'blog'>['slug']
}

const {
	data: { title, description, pubDate, category },
	readTime,
	slug
} = Astro.props
---

<article
	class=`grid grid-rows-auto group row-auto ${title.length > 15 ? 'md:col-span-2 lg:col-span-1' : ''}`
>
	<div
		class='flex justify-between flex-col py-6 gap-4 px-4 shadow-md hover:shadow-lg hover:-translate-y-1 transition-transform duration-150 ease-in-out dark:shadow-none dark:border dark:border-white'
	>
		<div class='flex flex-col gap-3'>
			<div class='flex flex-col gap-2'>
				<a class='text-2xl font-semibold tracking-wide' href={`/post/${slug}/`}>
					{title}
				</a>
				<div class='flex items-center justify-between gap-x-1'>
					<FormattedDate date={pubDate} />
					<span class='text-sm text-gray-800 dark:text-white'>{category}</span>
				</div>
			</div>
			<p class='overflow-hidden line-clamp-3 text-gray-700 dark:text-white mb-5 font-[400]'>
				{description}
			</p>
		</div>

		<footer class='flex items-center'>
			<a
				href={`/post/${slug}/`}
				class='flex justify-center items-center dark:text-white rounded-full font-semibold gap-1'
				aria-label={`go to ${title}`}
			>
				阅读 ({readTime}) <span
					class='mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out'
					><ArrowUp width='18' height='18' /></span
				>
			</a>
		</footer>
	</div>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
