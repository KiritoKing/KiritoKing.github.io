---
import type { CollectionEntry } from 'astro:content'

import { cn } from '@/utils'
import { Image } from 'astro:assets'
import HoverAnimatedLink from './HoverAnimatedLink.astro'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
---

<section class={cn(`flex flex-col md:flex-row sm:justify-between gap-8`)}>
	{
		posts.length > 0 ? (
			posts.map((post) => {
				return (
					<div class='flex flex-wrap gap-2'>
						<HoverAnimatedLink class='hover:underline' href={`/post/${post.slug}/`}>
							{post.data.title}
						</HoverAnimatedLink>
					</div>
				)
			})
		) : (
			<p class='text-gray-500'>没有找到相关博客😢</p>
		)
	}
</section>
