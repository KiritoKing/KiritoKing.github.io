---
import { cn } from '@/utils'
export interface Props {
	date: Date
	locale?: Intl.LocalesArgument
	faded?: boolean
}

const { date, locale = 'zh-cn', faded = false } = Astro.props
---

<time
	class={cn(
		'text-sm font-bold text-opacity-60',
		faded ? 'font-normal text-gray-500 dark:text-gray-200' : ''
	)}
	datetime={date.toISOString()}
>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric'
		})
	}
</time>
